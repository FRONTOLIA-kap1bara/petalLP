---
// Footer component with copyright and links
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <a href="/">
          <img src="/petallogo.png" alt="petal" width="50" height="50" />
          <span>petal</span>
        </a>
        <p class="footer-tagline">あなた好みにカスタマイズできる契約形態！</p>
      </div>
      
      <div class="footer-links">
        <div class="footer-links-column">
          <h3>コンテンツ</h3>
          <ul>
            <li><a href="/#topics">Topics</a></li>
            <li><a href="/#news">News</a></li>
            <li><a href="/#talents">Talents</a></li>
            <li><a href="/#recruit">Recruit</a></li>
          </ul>
        </div>
        
        <div class="footer-links-column">
          <h3>関連情報</h3>
          <ul>
            <li><a href="/company">会社概要</a></li>
            <li><a href="/privacy">プライバシーポリシー</a></li>
            <li><a href="/terms">利用規約</a></li>
            <li><a href="/#contact">お問い合わせ</a></li>
          </ul>
        </div>
        
        <div class="footer-links-column">
          <h3>フォロー</h3>
          <div class="footer-social">
            <a href="https://twitter.com/petal" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-twitter"></i>
            </a>
            <a href="https://www.youtube.com/petal" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-youtube"></i>
            </a>
            <a href="https://www.instagram.com/petal" target="_blank" rel="noopener noreferrer">
              <i class="fab fa-instagram"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} petal entertainment. All Rights Reserved.</p>
      <p>Operated by FRONTOLIA Internet</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-dark);
    color: white;
    padding: var(--space-xl) 0 var(--space-md);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: var(--space-md);
  }
  
  .footer-logo a {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-sm);
  }
  
  .footer-logo span {
    font-family: 'Poppins', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
  }
  
  .footer-tagline {
    font-size: 0.9rem;
    opacity: 0.8;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }
  
  .footer-links-column h3 {
    font-size: 1.1rem;
    margin-bottom: var(--space-sm);
    position: relative;
    display: inline-block;
  }
  
  .footer-links-column h3::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 30px;
    height: 2px;
    background-color: var(--color-primary);
  }
  
  .footer-links-column ul {
    list-style: none;
  }
  
  .footer-links-column li {
    margin-bottom: var(--space-xs);
  }
  
  .footer-links-column a {
    opacity: 0.8;
    transition: opacity 0.2s ease, transform 0.2s ease;
    display: inline-block;
  }
  
  .footer-links-column a:hover {
    opacity: 1;
    transform: translateX(3px);
  }
  
  .footer-social {
    display: flex;
    gap: var(--space-sm);
  }
  
  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  
  .footer-social a:hover {
    background-color: var(--color-primary);
    transform: translateY(-3px);
  }
  
  .footer-bottom {
    text-align: center;
    opacity: 0.6;
    font-size: 0.9rem;
  }
  
  .footer-bottom p {
    margin-bottom: var(--space-2xs);
  }
  
  /* Responsive adjustments */
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    
    .footer-logo {
      text-align: center;
    }
    
    .footer-logo a {
      justify-content: center;
    }
  }
  
  @media (max-width: 768px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .footer-links-column {
      text-align: center;
    }
    
    .footer-links-column h3::after {
      left: 50%;
      transform: translateX(-50%);
    }
    
    .footer-social {
      justify-content: center;
    }
  }
</style>